:host {
  display: block;
  outline: none;

  &:hover,
  &:focus {
    > .label:not(.expanded) {
      background-color: #22522b !important;
    }
  }
}

.label {
  padding-top: 8px;
  padding-left: 40px;
  padding-right: 20px;

  .routeIcon {
    margin-right: 40px;
  }
}

.arrow {
  width: 120px;
  margin-right: -15px;
}

.point {
  position: relative;
  width: 0;
  height: 0;
  border-top: 20px solid transparent;
  border-bottom: 20px solid transparent;
  border-right: 30px solid #696969 !important;
  float: right;
}

a {
  display: block;
  height: 48px;
  width: 100%;
  position: relative;
  color: white !important;
  cursor: pointer;
}

.disabledclick {
  opacity: 0.5;
  pointer-events: none;
}