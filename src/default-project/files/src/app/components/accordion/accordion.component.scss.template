.accordion {
  display: flex;
  width: 100%;
  flex-direction: column;

  .accordion-panel {
    display: flex;
    justify-content: space-between;
    padding: 15px 25px;
    background-color: #f0fff8;
    width: 100%;
    height: 100%;
    cursor: pointer;
    box-shadow: 1px 1px 3px 0px rgba(0, 0, 0, 0.12);
    transition: all 0.2s ease;
    margin-top: 10px !important;

    &:hover {
      background-color: darken(#e6fceb, 3%);
    }

    &.strong-color {
      background-color: #40764e;
      box-shadow: none;

      span,
      i {
        color: #ffffff;
      }

      &:hover {
        background-color: darken(#40764e, 3%);
      }
    }
  }

  .accordion-content {
    transition: height 0.3s ease-out;
    overflow: hidden;
  }

  span {
    font-size: 14px;
    color: #40764e;
    font-weight: bold;
  }

  i {
    color: #40764e;
    user-select: none;
  }
}

.space-label {
  margin-right: 5px;
}

.icon-trash {
  position: absolute;
  margin-top: 25px;  
  cursor: pointer;
}

.using-icon-trash {
  margin-right: 40px;
}

.title-template {
  font-family: "Roboto-Regular", "Roboto" !important;
  font-weight: 400 !important;
  font-style: normal !important;
  font-size: 18px !important;
  color: #6e6e6e !important;
  margin-left: 5px !important;
}

.icon-trash-newChecklist{  
  margin-left: 64.3em !important;
}


.accordion-content {
  display: block;
  position: relative;
  padding-left: 15px;
  padding-right: 15px;
  box-shadow: 0 2px 1px -1px rgba(0,0,0,0.0), 0 1px 1px 0 rgba(0,0,0,.14), 0 1px 3px 0 rgba(0,0,0,.12);
}