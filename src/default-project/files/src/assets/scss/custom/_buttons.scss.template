}

.btn-new {
  width: 100px;
  height: 30px;
  left: 1388px;
  top: 103px;
  background: $btn-success;
  box-shadow: 0px 3px 4px rgba(0, 0, 0, 0.25);
  border-radius: 5px;
  cursor: pointer;

  span {
