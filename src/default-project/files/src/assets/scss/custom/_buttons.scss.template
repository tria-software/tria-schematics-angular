@import "./colors";

.btn-success {
  color: #fff;
  background-color: $btn-success;
  border-color: $btn-success;
  border-radius: 3px;
  padding: 10px;
}

.btn-success:hover {
  color: #fff;
  background-color: #1e4a26;
  border-color: #1e4a26;
}

.btn-default {
  background-color: #818181;
  border-radius: 3px;
  color: #ffffff;
  padding: 10px;
}

.btn-default:hover {
  color: #fff;
  background-color: #6b6b6b;
  border-color: #6b6b6b;
}

.btn-yellow {
  background: #e9b500 !important;
  box-shadow: 0px 0px 4px rgba(0, 0, 0, 0.54) !important;
